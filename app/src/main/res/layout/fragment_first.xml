<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:background="#333131"
        android:visibility="visible"
        tools:visibility="visible">

        <TextView
            android:id="@+id/textBalance"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="100dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:shadowColor="@android:color/black"
            android:text="Balance"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textNumber"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="-40dp"
            android:layout_marginRight="100dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:shadowColor="@android:color/black"
            android:text="0.00000000"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="bold" />
        <Spinner
            android:id="@+id/spinnerDoge"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="-50dp"
            android:layout_marginRight="100dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:entries="@array/doge_array"
            android:shadowColor="@android:color/black"
            android:textColor="@android:color/black"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textChange"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="100dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:shadowColor="@android:color/black"
            android:text="Chance %"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTex1"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="-40dp"
            android:layout_marginRight="100dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/custom_input"
            android:hint="49.50"
            android:inputType="numberDecimal"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox1"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="-40dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/custom_input"
            android:text="Auto"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/editTex2"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="-40dp"
            android:layout_marginRight="100dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/custom_input"
            android:text="10"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textStrip"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="300dp"
            android:layout_marginTop="-40dp"
            android:layout_marginRight="100dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="-"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/editTex3"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="330dp"
            android:layout_marginTop="-40dp"
            android:layout_marginRight="100dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/custom_input"
            android:text="95"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textBet"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:shadowColor="@android:color/black"
            android:text="Bet"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextBet"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="-40dp"
            android:layout_marginRight="100dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:background="@drawable/custom_input"
            android:hint="0.00000000"
            android:inputType="numberDecimal"
            android:textStyle="bold" />
        <Button
            android:id="@+id/imageRefresh"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="100dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="ðŸ”„ï¸"
            android:shadowColor="@android:color/black"
            android:textColor="@android:color/black"
            android:textStyle="bold" />
        <CheckBox
            android:id="@+id/checkBoxRepeatBets"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:layout_marginLeft="180dp"
            android:layout_marginRight="100dp"
            android:layout_marginTop="-40dp"
            android:background="@drawable/custom_input"
            android:text="Repeat Bets"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textProfit"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:shadowColor="@android:color/black"
            android:text="Profit"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textNumber2"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="-40dp"
            android:layout_marginRight="100dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:shadowColor="@android:color/black"
            android:text="0.00000000"
            android:textColor="@android:color/holo_green_light"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textDoge"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="-40dp"
            android:layout_marginRight="100dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Doge"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:drawableLeft="@drawable/ic_baseline_play_arrow_24"
            android:text="Start"
            android:textStyle="bold"
            android:textSize="10dp"/>

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="-60dp"
            android:drawableLeft="@drawable/ic_baseline_stop_24"
            android:text="Stop"
            android:textStyle="bold"
            android:textSize="10dp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:layout_marginLeft="255dp"
            android:layout_marginTop="-61dp"
            android:drawableLeft="@drawable/ic_baseline_wine_bar_24"
            android:text="Stop on Win"
            android:textStyle="bold"
            android:textSize="10dp"/>

    </LinearLayout>

</FrameLayout>