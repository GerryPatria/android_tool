<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SecondFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:shadowColor="@android:color/black"
            android:text="ACCOUNT ID :"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="284dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"
            android:drawableStart="@drawable/ic_baseline_email_24_login"
            android:background="@drawable/custom_input"
            android:ems="10"
            android:hint=" Your E-Mail"
            android:inputType="textEmailAddress"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="-40dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/custom_input"
            android:text="SAVE"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="284dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"

            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_baseline_login"
            android:ems="10"
            android:hint=" Your Password"
            android:inputType="textPassword"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textStyle="italic" />

        <CheckBox
            android:id="@+id/checkBox2"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="-40dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/custom_input"
            android:text="SAVE"
            android:textStyle="bold" />


        <Button
            android:layout_width="390dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/ic_baseline_login_24_acc"
            android:text="LOGIN AREA"
            android:textStyle="bold" />

        <!-- Start Connect-->
        <Button
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:drawableStart="@drawable/ic_baseline_login_24_acc"
            android:text="CREATE ACCOUNT"
            android:textStyle="bold" />

        <!--- Create Deposite -->
        <Button
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="-51dp"
            android:drawableStart="@drawable/ic_baseline_login_24_acc"
            android:text="GET DEPOSITE HERE"
            android:textStyle="bold" />

        <!--Start -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="15dp"
            android:shadowColor="@android:color/black"
            android:text="GET DEPOSITE :"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextPersonName3"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_baseline_login"
            android:ems="10"
            android:hint=" Login to Deposite Address"
            android:inputType="textEmailAddress"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <EditText
            android:id="@+id/editTextTextPersonName4"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"

            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_baseline_account_balance_wallet_24"
            android:ems="10"
            android:hint=" Dx8a9XkDjshw1oosjAkx997sjKjszhf"
            android:inputType="textLongMessage"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textStyle="italic" />

        <EditText
            android:id="@+id/editTextTextPersonName5"
            android:layout_width="390dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"

            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_baseline_attach_money_24"
            android:ems="10"
            android:hint=" SET AMMOUNT HERE"
            android:inputType="textLongMessage"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textStyle="italic" />

        <Button
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:drawableStart="@drawable/ic_baseline_login_24_acc"
            android:text="WITHDRAW"
            android:textStyle="bold" />

        <Button
            android:layout_width="190dp"
            android:layout_height="50dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="-51dp"
            android:layout_marginRight="100dp"
            android:drawableStart="@drawable/ic_baseline_login_24_acc"
            android:text="WITHDRAW ALL"
            android:textStyle="bold" />


        <!-- Auto Withdraw -->

        <CheckBox
            android:id="@+id/checkBox4"
            android:layout_width="186dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/custom_input"
            android:text="AUTO WD IF BALANCE"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTextTextPersonName6"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="-40dp"
            android:layout_marginRight="100dp"

            android:background="@drawable/custom_input"
            android:drawableStart="@drawable/ic_baseline_attach_money_24"
            android:ems="10"
            android:hint=" SET HERE (DOGE)"
            android:inputType="textLongMessage"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:textStyle="italic" />

        <!-- Auto Restore -->

        <CheckBox
            android:id="@+id/checkBox5"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/custom_input"
            android:text="RTO"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox6"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="-41dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/custom_input"
            android:text="BN"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox7"
            android:layout_width="105dp"
            android:layout_height="40dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="-41dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/custom_input"
            android:text="PS"
            android:textStyle="bold" />

        <CheckBox
            android:id="@+id/checkBox8"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginLeft="310dp"
            android:layout_marginTop="-41dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/custom_input"
            android:text="SN"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:shadowColor="@android:color/black"
            android:text="RTO : Restore Trade if RTO | BN : Balance Notification \n PS : Prevent ScreenLock | SN : Sound Notification if Bot Stop"
            android:textColor="@android:color/black"
            android:textStyle="italic" />
    </LinearLayout>

</FrameLayout>